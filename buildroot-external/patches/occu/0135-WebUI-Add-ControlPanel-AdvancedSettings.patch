+proc createfile { filename } {
+ set result ""
+
+ if {![file exists $filename]} {
+   catch {exec touch $filename} e
+
+   if {[string trim $e] != ""} {
+    set result "error createfile $filename \n"
+   }
+ }
+ return $result
+}
