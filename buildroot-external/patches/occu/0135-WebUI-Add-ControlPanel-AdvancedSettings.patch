+proc read_var_from_file { filename varname } {
+  set var ""
+
+  set fd -1
+  catch { set fd [open $filename r] }
+  if { $fd >=0 } {
+      while { [gets $fd buf] >=0 } {
+        if [regexp "^ *$varname *= *(.*)$" $buf dummy var] break
+      }
+    close $fd
+  }
+
+  return $var
+}
